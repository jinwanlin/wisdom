<%= simple_form_for(@material, html:{multipart: true}) do |f| %>
  <%= f.error_notification %>

<div style="padding: 0px 68px; ">
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :article_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>