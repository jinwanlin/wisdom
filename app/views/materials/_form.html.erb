<div style="padding: 0px 68px; ">
	<%= simple_form_for(@material, html:{multipart: true}) do |f| %>
	  <%= f.error_notification %>

	<div style="padding: 0px 68px; ">
	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :amount %>
	    <%= f.input :article_id, :collection => @articles %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, class: 'btn btn-primary' %>
			<%= link_to 'Back', materials_path, class: 'btn' %>
	  </div>
	<% end %>
	</div>
</div>