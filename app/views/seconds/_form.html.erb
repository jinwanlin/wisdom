<div style="padding: 0px 68px; ">
	<%= simple_form_for(@second, html: {multipart: true}) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :title %>
	    <%= f.input :owner %>
	    <%= f.input :price %>
	    <%= f.input :views %>
	    <%= f.input :contact %>
	    <%= f.input :desc, :as => "text", :input_html => {:class => 'content'} %>
			<%= file_field_tag :attachment %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, {:class => 'btn btn-primary'} %>
			<%= link_to 'Back', seconds_path, {:class => 'btn'} %>
	  </div>
	<% end %>
</div>