<div style="padding: 0px 68px; ">
	<%= simple_form_for(@second, html: {multipart: true}) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :title, label: "标题" %>
	    <%= f.input :owner, label: "物主" %>
	    <%= f.input :price, label: "价格" %>
	    <%= f.input :views, label: "浏览人数" %>
	    <%= f.input :contact, label: "联系方式" %>
	    <%= f.input :desc, label: "描述", :as => "text", :input_html => {:class => 'content'} %>
			<%= file_field_tag :attachment %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, {:class => 'btn btn-primary'} %>
			<%= link_to 'Back', seconds_path, {:class => 'btn'} %>
	  </div>
	<% end %>
</div>