<div style="padding: 0px 68px; ">
<%= simple_form_for(@news, :html => { :multipart => true }) do |f| %>

	<div class="form-inputs">
		<%= f.input :title, :required => true, :label => '标题' %>
		<%= f.input :content, :input_html => {:class => 'content'}, :label => '内容' %>
		<%= file_field_tag :attachment %>
		
	</div>
	<div class="form-actions">
		<%= f.button :submit, {:class => "btn btn-primary"} %>
		<%= link_to 'Back', news_index_path, {:class => "btn"} %>
	</div>
<% end %>
</div>