<% content_for :header do -%>
	<h3>新闻列表 - <%= link_to 'json format', news_index_path(:json) %></h3>
<% end -%>
<%= request.user_agent %>
<table class="table table-hover">
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th></th>
		<th></th>
		<th></th>
    <th>↓</th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title.truncate(20) %></td>
    <td><%= news.content.truncate(30) %></td>
		<td><%= l news.created_at %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'json', news_path(news, :json) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '创建新闻', new_news_path , {:class => "btn"} %>
<%= will_paginate @news %>