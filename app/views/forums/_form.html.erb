<div style="padding: 0px 68px; ">
	<%= simple_form_for(@forum, html:{multipart: true}) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :name %>
	    <%= f.input :position %>
	    <%= f.input :need_type, :collection => Forum::NEED_TYPE %>
			<div id="addfile">
				<%= file_field_tag "attachments[]" %><br/>
			</div>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, {class: 'btn btn-primary'} %>
			<%= link_to 'Back', forums_path, :class => 'btn' %>
	  </div>
	<% end %>
</div>