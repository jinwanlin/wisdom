<script type="text/javascript" charset="utf-8">
	function add_file() {
		$("#addfile").append('<%= file_field_tag "attachments[]" %><br/>');
	}
</script>

<%= simple_form_for(@merchant, html:{multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :app_type %>
    <%= f.input :service_type, :collection => Merchant::NEAR_SERVICE_TYPE, :prompt => false %>
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.input :contact %>
    <%= f.input :position %>
    <%= f.input :location %>
    <%= f.input :desc %>
    <%= f.input :v_type %>

		<div id="addfile">
			<%= file_field_tag "attachments[]" %><br/>
		</div>
		<input type='button' value="add file" onclick="add_file();" class="btn btn-info" >
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
		<%= link_to "Back", merchants_path, :class => "btn" %>
  </div>
<% end %>
