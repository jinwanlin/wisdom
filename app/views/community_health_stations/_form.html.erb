<script type="text/javascript" charset="utf-8">
	function add_file() {
		$("#addfile").append('<%= file_field_tag "attachments[]" %><br/>');
	}
</script>

<%= simple_form_for(@community_health_station, html:{multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "名称" %>
    <%= f.input :community_name, label: "所属社区" %>
    <%= f.input :location, label: "地址" %>
    <%= f.input :essence, label: "性质" %>
    <%= f.input :contact, label: "联系方式" %>
    <%= f.input :workingtime, label: "营业时间" %>
    <%= f.input :openoffice, label: "开放科室", input_html: {class: 'content'} %>
		<%= f.input :desc, label: "介绍", as: 'text', input_html:{class: 'content'} %>

		<div id="addfile">
			<%= file_field_tag "attachments[]" %><br/>
		</div>
		<input type='button' value="add file" onclick="add_file();" class="btn btn-info" >
  </div>

  <div class="form-actions">
    <%= f.button :submit, {:class => "btn btn-primary"} %>
		<%= link_to 'Back', community_health_stations_path, {:class => "btn"} %>
  </div>
<% end %>
