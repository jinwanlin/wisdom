<script type="text/javascript" charset="utf-8">
	function add_file() {
		$("#addfile").append('<%= file_field_tag "attachments[]" %><br/>');
	}
</script>

<%= simple_form_for(@community_health_station, html:{multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :community_name %>
    <%= f.input :location %>
    <%= f.input :essence %>
    <%= f.input :desc %>
    <%= f.input :contact %>
    <%= f.input :workingtime %>
    <%= f.input :openoffice %>

		<div id="addfile">
			<%= file_field_tag "attachments[]" %><br/>
		</div>
		<input type='button' value="add file" onclick="add_file();" class="btn btn-info" >
  </div>

  <div class="form-actions">
    <%= f.button :submit, {:class => "btn btn-primary"} %>
		<%= link_to 'Back', community_health_stations_path, {:class => "btn"} %>
  </div>
<% end %>
