<% content_for :header do -%>
	<h3>专家列表</h3>
<% end -%>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Sex</th>
    <th>Age</th>
    <th>Hostpital</th>
    <th>Office</th>
    <th>Major</th>
    <th>Desc</th>
    <th>Out call</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.name %></td>
    <td><%= doctor.level %></td>
    <td><%= doctor.sex %></td>
    <td><%= doctor.age %></td>
    <td><%= doctor.hostpital %></td>
    <td><%= doctor.office %></td>
    <td><%= doctor.major.truncate(20) %></td>
    <td><%= doctor.desc.truncate(30) %></td>
    <td><%= doctor.out_call %></td>
    <td><%= link_to 'Show', doctor %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create Doctor', new_doctor_path, {class: 'btn'} %>
