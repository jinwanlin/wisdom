<% content_for :header do -%>
	<h3>健康知识库列表</h3>
<% end -%>

<table class="table table-hover">
  <tr>
    <th>Base type</th>
    <th>Title</th>
    <th>Content</th>
    <th>Content url</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repositories.each do |repository| %>
  <tr>
    <td><%= repository.base_type %></td>
    <td><%= repository.title %></td>
    <td><%= repository.content.truncate(30) %></td>
    <td><%= repository.content_url %></td>
    <td><%= repository.category %></td>
    <td><%= link_to 'Show', repository %></td>
    <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
    <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create Repository', new_repository_path, {class: 'btn'} %>
