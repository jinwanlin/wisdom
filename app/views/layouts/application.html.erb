<!DOCTYPE html>
<html>
<head>
  <title>Wisdom</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<style type="text/css">
		body {
			padding-top: 60px;
		 	padding-bottom: 40px;
		}
   .sidebar-nav {
     	padding: 9px 0;
   }
 </style>

  <%= csrf_meta_tags %>
</head>

<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container-fluid">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"></a>
				<%= link_to '智慧社区', root_path, :class => "brand" %>
				<div class="nav-collapse collapse">
					<p class="navbar-text pull-right">
						Logged in as <a href="#" class="navbar-link"><%= current_user.email if current_user %></a>
					</p>
					<ul class="nav">
						<li class="active">
							<%= link_to '主页', root_path %>
						</li>
						<li>
							<a href="#about">关于</a>
						</li>
						<li>
							<a href="#contact">联系</a>
						</li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>

	<div class="container-fluid">
	  <div class="row-fluid">
	    <div class="span9">
				<div class="well-white">
					<!--Body content-->
					<div class="">
						<%= yield :header %>
					</div>
					<div class="main">
						<%#= request.user_agent %>
						<%= yield %>
					</div>
				</div>
	      <!--Sidebar content-->
	    </div>
	    <div class="span3">
				<div class="well sidebar-nav">
					<ul class="nav nav-list">
						<li class="nav-header">社区</li>
							<%= nav_to "新闻管理", news_index_path, 'news' %>
							<%#= nav_to "用户管理", "", 'users' %>
							<%= nav_to "小区管理", communities_path, 'communities' %>
							<%= nav_to "微博管理", notes_path, 'notes' %>
						<li class="nav-header">政务</li>
							<%= nav_to "微博token管理", weibo_tokens_path, 'weibo_tokens' %>
						<li class="nav-header">便民</li>
							<%= nav_to "二手物品管理", seconds_path, 'seconds' %>
							<%= nav_to "家政服务管理", houses_path, 'houses' %>
							<%= nav_to "周边商户管理", merchants_path, 'merchants' %>
						<li class="nav-header">医疗</li>
							<%= nav_to "医院信息管理", hospitals_path, 'hospitals' %>
							<%= nav_to "社区卫生服务站管理", community_health_stations_path, 'community_health_stations' %>
							<%= nav_to "专家信息管理", doctors_path, 'doctors' %>
							<%= nav_to "健康知识库管理", repositories_path, 'repositories' %>
						<li class="nav-header">美食优惠</li>
							<%= nav_to "优惠券管理", coupons_path, 'coupons' %>
							<%= nav_to "美食管理", notes_path, 'foods' %>
					</ul>
				</div>
	    </div>
	  </div>
	</div>
</body>
</html>




