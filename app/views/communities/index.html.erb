<% content_for :header do -%>
	<h3>小区列表</h3>
<% end -%>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Desc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @communities.each do |community| %>
  <tr>
    <td><%= community.name %></td>
    <td><%= community.location %></td>
    <td><%= community.desc %></td>
    <td><%= link_to 'Show', community %></td>
    <td><%= link_to 'Edit', edit_community_path(community) %></td>
    <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '创建小区', new_community_path, {:class => "btn"} %>
