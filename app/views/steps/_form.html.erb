<div style="padding: 0px 68px; ">
<%= simple_form_for(@step, html:{multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :position %>
    <%= f.input :article_id, :collection => @articles %>
    <%= f.input :desc, :input_html => {:class => "content"} %>
		<div id="addfile">
			<%= file_field_tag "attachments[]" %><br/>
		</div>
		<input type='button' value="add file" onclick="add_file();" class="btn btn-info" >
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
		<%= link_to 'Back', steps_path, class: 'btn' %>
  </div>
<% end %>
</div>