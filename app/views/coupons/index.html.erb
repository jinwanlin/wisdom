<% content_for :header do %>
	<h3>优惠券列表</h3>
<% end %>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Desc</th>
    <th>Expire</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.merchant_name.truncate(20) %></td>
    <td><%= coupon.title.truncate(20) %></td>
    <td><%= coupon.desc.truncate(30) %></td>
    <td><%= coupon.expire %></td>
    <td><%= coupon.category %></td>
    <td><%= coupon.cover %></td>
    <td><%= link_to 'Show', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create Coupon', new_coupon_path, {:class => 'btn'} %>
<%= will_paginate @coupons %>


