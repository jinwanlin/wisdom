<% content_for :header do -%>
	<h3>医院列表</h3>
<% end -%>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>地址</th>
    <th>医院性质</th>
    <th>介绍</th>
    <th>联系方式</th>
    <th>营业时间</th>
    <th>开放科室</th>
    <th>医院等级</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hospitals.each do |hospital| %>
  <tr>
    <td><%= hospital.name %></td>
    <td><%= hospital.location.truncate(20) %></td>
    <td><%= hospital.essence %></td>
    <td><%= hospital.desc.truncate(20) %></td>
    <td><%= hospital.contact %></td>
    <td><%= hospital.workingtime %></td>
    <td><%= hospital.openoffice %></td>
    <td><%= hospital.level %></td>
    <td><%= link_to 'Show', hospital %></td>
    <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
    <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create Hospital', new_hospital_path, {:class => "btn"} %>
